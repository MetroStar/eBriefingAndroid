<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort Options"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spinner_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15dp" >

            <Button
                android:id="@+id/button_sort_descending"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="29dp"
                android:background="@drawable/button_overview_chapters"
                android:text="Descending"
                android:textSize="15dp" />

            <Button
                android:id="@+id/button_sort_ascending"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/button_sort_descending"
                android:layout_alignBottom="@+id/button_sort_descending"
                android:layout_toLeftOf="@+id/button_sort_descending"
                android:background="@drawable/button_overview_description"
                android:text="Ascending"
                android:textSize="15dp" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_done"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Done"
        android:textColor="#FFFFFF"
        android:background="#ff004D95" />
    
</LinearLayout>